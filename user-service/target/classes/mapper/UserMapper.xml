<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lyra.app.mapper.UserMapper">
    <select id="selectAll" resultType="user">
        select id, user_name, user_password, phone, email from tbl_user
    </select>

    <select id="getUserById" parameterType="int" resultType="user">
        slect id, user_name, user_password, phone, email from tbl_user where id = #{id}
    </select>
    
    <select id="getUserByName" parameterType="String" resultType="user">
        slect id, user_name, user_password, phone, email from tbl_user where id = #{name}
    </select>

    <insert id="newUser" parameterType="user">
        insert into tbl_user value(#{user.id}, #{user.user_name}, #{user.user_password}, #{user.phone}, #{user.email})
    </insert>
</mapper>